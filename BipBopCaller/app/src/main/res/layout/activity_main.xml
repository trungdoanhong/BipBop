<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:background="@color/colorAccent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="50px"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:onClick="resetHome"
                android:paddingTop="20px"
                android:src="@drawable/title" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_weight="0.3"
                android:paddingLeft="40px"
                android:src="@drawable/acclogo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:fontFamily="Corbel"
                android:gravity="center_vertical"
                android:text="Tài khoản"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_marginRight="30px"
            android:layout_marginBottom="30px"
            android:layout_weight="0.1">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Bạn muốn bán gì ?"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.2"
            android:background="@color/fragColorgb"
            android:weightSum="3">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="giấy vụn" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="lon nước" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="chai nhựa" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="sắt" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="đồng" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="nhôm" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="bao ni lông" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="khác" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1">

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="khác" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="khác" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="khác" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bt"
                    android:onClick="selectMaterialType"
                    android:text="khác" />

            </TableRow>

        </TableLayout>

        <EditText
            android:id="@+id/etStuffType"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.15"
            android:background="@color/fragColorgb2"
            android:ems="10"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingLeft="30px"
            android:text="Phế liệu" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Hình ảnh"
            android:textAlignment="center"
            android:textColor="@color/chu2"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.3">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/img" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    app:srcCompat="@drawable/img" />

            </LinearLayout>

        </HorizontalScrollView>


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.15"
            android:background="@color/colorAccent"
            android:onClick="nextPage"
            android:text="Kế tiếp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>