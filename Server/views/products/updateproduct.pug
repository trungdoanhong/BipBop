extends ../layout/layout.pug
block content  
    .container
            h1 Update Product
            a(href='/')
                button(class="btn btn-primary") Home
            if errors
                each error in errors
                    .alert.alert-danger= error
            form(action="/updateproduct", method="POST", enctype="multipart/form-data")
                .form-group
                    label(for="name") Name
                    input#name.form-control(name="name" type="text", value=value)

                .form-group
                    label(for="price") price
                    input#price.form-control(name="price" type="number", value= "120000")
