extends ../views/layout/layout.pug
block content
    html
        head
            title BIPBOP
        body
        .navbar#navbar
            nav.navbar.navbar-expand-lg.navbar-light
                img#logo(src="/img/0893.jpg_wh860.jpg")
                a#bookStore.navbar-brand(href='/') BIP BOP           
                //- #navbarTogglerDemo01.collapse.navbar-collapse
                    form#formSearch(action="/product/search", method="GET", class="d-flex")
                        input(type="text", name="q", class="form-control")
                        //- button(class="btn btn-primary ml-2") search
                //- a#cart Cart
                //- a#login Login
        .container#container
            #head
                a#home(href="/",class="fa fa-home") Home                    
                a#introduce(href="/introduce", class="fa fa-info") Introduce 
                a#product(href="/product", class="fa fa-bars") Products
                a#contact(href="/contact", class="fa fa-phone") Contact
        .container#viewProduct
            a#createProduct(href ="/createproduct")
                button(class="btn btn-primary ml-2") Create Product
            
            .row
                each product in products
                    .col-sm-6.col-md-4.col-lg-3
                        .card.mb-3
                            img(style="width:250px;height:200px").card-img-top(src=product.image)
                            .card-body
                                h5.card-title= product.name
                                a.btn.btn-primary(href='/add/' + product.id) add to cart
                                a.btn.btn-primary(href='/viewproduct/' + product.id) View
                                span &nbsp
                                a.btn.btn-danger(href='/delete/' + product.id) Delete
                                a.btn.btn-primary(href = '/updateproduct/' + product.id) Update Product